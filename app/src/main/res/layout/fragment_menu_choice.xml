<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuChoiceFragment"
    android:background="#FF2412"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="Jakie dania wybierasz?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#FF2412"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonReadyMeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:padding="15dp"
            android:backgroundTint="@color/white"
            android:textSize="15sp"
            android:textColor="#21A700"
            android:text="Gotowe dania"/>

        <Button
            android:id="@+id/buttonCustomMeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:padding="15dp"
            android:backgroundTint="@color/white"
            android:textSize="15sp"
            android:textColor="#21A700"
            android:text="Komponuj wÅ‚asne"/>

    </LinearLayout>

</LinearLayout>