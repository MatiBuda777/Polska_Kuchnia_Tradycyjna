<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomMealFragment"
    android:background="@color/red"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/white"
            android:textSize="30sp"
            android:textColor="@color/green"
            android:text="Skomponuj własne danie:" />

        <!-- 1. Zupy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/imageview_soup"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:src="@drawable/barszcz"
                android:contentDescription="Zupa"
                />
            <Spinner
                android:id="@+id/spinner_select_soup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"/>
        </LinearLayout>


        <!-- 2. Drugie dania -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/imageview_mainCourse"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:src="@drawable/bigos"
                android:contentDescription="Drugie danie"
                />
            <Spinner
                android:id="@+id/spinner_select_mainCourse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"/>
        </LinearLayout>


        <!-- 3. Napoje -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/imageview_drinks"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:src="@drawable/herbata"
                android:contentDescription="Napój"
                />
            <Spinner
                android:id="@+id/spinner_select_drink"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonConfirmOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/white"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:text="Zatwierdź"/>
    </LinearLayout>
</ScrollView>